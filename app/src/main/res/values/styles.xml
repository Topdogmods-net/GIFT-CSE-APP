<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#151515</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#151515</item>
        <item name="android:fontFamily">@font/product_sans_family</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
    </style>

    <style name="DarkProgressBar" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#151515</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/product_sans_family</item>
    </style>
</resources>
